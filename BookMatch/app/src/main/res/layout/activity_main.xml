<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/android_bookmatch_image_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_weight="3"
        android:src="@drawable/plate"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#303030"
        android:layout_weight="5"
        android:orientation="horizontal">
        <TextView
            android:text="@string/forma_de_construcao"
            style="@style/CustomText"/>

        <ImageButton
            android:id="@+id/button_column"
            style="@style/CustomButtonChoice"
            android:rotation="90"
            android:background="@drawable/button_column"/>

        <ImageButton
            android:id="@+id/button_grid_2"
            style="@style/CustomButtonChoice"
            android:background="@drawable/button_grid_2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/button1"
            style="@style/CustomButtonView"/>

        <ImageButton
            android:id="@+id/button2"
            style="@style/CustomButtonView"/>

        <ImageButton
            android:id="@+id/button3"
            style="@style/CustomButtonView"/>

        <ImageButton
            android:id="@+id/button4"
            style="@style/CustomButtonView"
            android:layout_height="81dp"/>
    </LinearLayout>

</LinearLayout>